@{
    var esteHomepage = Context.Request.Path.Value?.Equals("/") == true;
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Cărbuni Apacks</title>

    @RenderSection("MetaTags", required: false)

    @if (ViewData["Canonical"] != null)
    {
        <link rel="canonical" href="@ViewData["Canonical"]" />
    }

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --albastru-site: #1f3b71;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .hero-header {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            z-index: 20;
            height: 56px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 1rem;
        }

            .hero-header.bg-white.border-bottom.shadow-sm {
                position: relative;
                background: white;
                border-bottom: 1px solid #ddd;
            }

        .burger-button,
        .cart-button {
            background: transparent;
            border: none;
            display: flex;
            align-items: center;
            cursor: pointer;
        }

            .burger-button svg,
            .cart-button svg {
                transition: transform 0.2s ease, stroke 0.2s ease;
                stroke-width: 3;
            }

            .burger-button:hover svg,
            .cart-button:hover svg {
                transform: scale(1.15);
                stroke: #ff3b00 !important;
            }

        .logo-link {
            text-decoration: none;
        }

        .logo-text {
            font-size: 1.25rem;
            font-weight: 700;
            transition: transform 0.2s ease, color 0.2s ease;
        }

        .logo-link:hover .logo-text {
            transform: scale(1.05);
            color: #ff3b00 !important;
            animation: pulse 0.5s ease-in-out;
        }

        @@keyframes pulse {
            0%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.07);
        }

        100% {
            transform: scale(1);
        }

        }

        .sidebar {
            position: fixed;
            top: 0;
            height: 100vh;
            width: 280px;
            background: white;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            z-index: 9999;
            overflow-y: auto;
            transform: translateX(-100%);
            opacity: 0;
            pointer-events: none;
            transition: transform 0.3s ease, opacity 0.3s ease;
        }

            .sidebar.right-sidebar {
                right: 0;
                left: auto;
                transform: translateX(100%);
            }

            .sidebar.active {
                transform: translateX(0);
                opacity: 1;
                pointer-events: auto;
            }

        .overlay-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.4);
            backdrop-filter: blur(2px);
            z-index: 9998;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

            .overlay-sidebar.active {
                opacity: 1;
                pointer-events: auto;
            }

        .btn-close-sidebar {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 1.5rem;
            background: none;
            border: none;
            cursor: pointer;
        }

        main.container.py-4 {
            padding-top: 80px !important;
        }
    </style>
</head>
<body>
    <header class="hero-header d-flex justify-content-between align-items-center px-2 px-sm-3 @(!esteHomepage ? "bg-white border-bottom shadow-sm" : "")"
            style="height: 56px;">
        <button class="burger-button" aria-label="Deschide meniul" onclick="deschideMeniu()">
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="none"
                 stroke="@((esteHomepage ? "white" : "#1f3b71"))" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <line x1="3" y1="6" x2="21" y2="6" />
                <line x1="3" y1="12" x2="21" y2="12" />
                <line x1="3" y1="18" x2="21" y2="18" />
            </svg>
        </button>

        <a class="logo-link" asp-controller="Website" asp-action="Index">
            <span class="logo-text @(esteHomepage ? "text-white" : "text-dark")">
                CĂRBUNI APACKS
            </span>
        </a>

        <a href="javascript:void(0)" class="cart-button" aria-label="Coș cumpărături" onclick="deschideCos()">
            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="none"
                 stroke="@((esteHomepage ? "white" : "#1f3b71"))" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="9" cy="21" r="1" />
                <circle cx="20" cy="21" r="1" />
                <path d="M1 1h4l2.5 13a2 2 0 0 0 2 1.6h11a2 2 0 0 0 2-1.6L23 6H6" />
            </svg>
        </a>
    </header>

    <div id="meniuLateral" class="sidebar left-sidebar">
        <button onclick="inchideMeniu()" class="btn-close-sidebar">✕</button>
        <ul class="list-unstyled p-4">
            <li><a href="/">Acasă</a></li>
            <li><a href="/Website/Produse">Produse</a></li>
            <li><a href="/Website/CumAlegiCarbunii">Cum alegi cărbunii</a></li>
            <li><a href="/Website/DespreNoi">Despre noi</a></li>
            <li><a href="/Website/Contact">Contact</a></li>
        </ul>
    </div>

    <div id="cosLateral" class="sidebar right-sidebar">
        <button onclick="inchideCos()" class="btn-close-sidebar">✕</button>
        <div class="p-4">
            <h5>Coșul tău</h5>
            <p>(coșul este momentan gol)</p>
        </div>
    </div>

    <div id="overlaySidebar" class="overlay-sidebar" onclick="inchideMeniu(); inchideCos();"></div>

    <main class="@(esteHomepage ? "" : "container py-4")">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <script>
        function deschideMeniu() {
            document.getElementById("meniuLateral").classList.add("active");
            document.getElementById("overlaySidebar").classList.add("active");
        }

        function inchideMeniu() {
            document.getElementById("meniuLateral").classList.remove("active");
            document.getElementById("overlaySidebar").classList.remove("active");
        }

        function deschideCos() {
            document.getElementById("cosLateral").classList.add("active");
            document.getElementById("overlaySidebar").classList.add("active");
        }

        function inchideCos() {
            document.getElementById("cosLateral").classList.remove("active");
            document.getElementById("overlaySidebar").classList.remove("active");
        }
    </script>
</body>
</html>
