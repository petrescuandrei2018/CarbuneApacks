        }(window, document, 'script', 'https://connect.facebook.net/en_US/fbevents.js');
        fbq('init', '1166759961920276');
        fbq('track', 'PageView');

        document.addEventListener('click', function (e) {
            if (e.target && e.target.matches('.btn-adauga-cos')) {
                fbq('track', 'AddToCart');
            }
            if (e.target && (e.target.href?.includes('wa.me') || e.target.href?.includes('tel:'))) {
                fbq('track', 'Contact');
            }
        });

        document.addEventListener('submit', function (e) {
            if (e.target && e.target.matches('#formular-comanda')) {
                fbq('track', 'Purchase');
            }
        });
    </script>
    <noscript>
        <img height="1" width="1" style="display:none"
             src="https://www.facebook.com/tr?id=1166759961920276&ev=PageView&noscript=1" />
    </noscript>
    <!-- End Meta Pixel Code -->

    <!-- Open Graph -->
    <meta property="og:title" content="Cărbuni pentru grătar – CĂRBUNI APACKS" />
    <meta property="og:description" content="Cărbuni de calitate superioară, naturali, fără fum, livrare rapidă." />
    <meta property="og:url" content="https://carbune.ro" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://carbune.ro/assets/img/preview.jpg" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        footer {
            margin-top: 3rem;
            padding: 2rem 0;
            background: #f8f9fa;
            text-align: center;
        }
        .navbar-brand {
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
    </style>
</head>

<body>
