@{
    var esteHomepage = Context.Request.Path.Value?.Equals("/") == true;
    var culoareIconite = esteHomepage ? "white" : "#1f3b71";

}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Cărbuni Apacks</title>

    @RenderSection("MetaTags", required: false)

    @if (ViewData["Canonical"] != null)
    {
        <link rel="canonical" href="@ViewData["Canonical"]" />
    }

    <link rel="icon" type="image/png" href="~/images/logo-apacks.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        :root {
            --albastru-site: #1f3b71;
        }

        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .hero-header {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            z-index: 20;
            height: 80px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 1rem;
        }

            .hero-header.bg-white.border-bottom.shadow-sm {
                position: relative;
                background: white;
                border-bottom: 1px solid #ddd;
            }

        .burger-button,
        .cart-button {
            background: transparent;
            border: none;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 80px;
            padding: 0;
            cursor: pointer;
        }

            .burger-button svg,
            .cart-button svg {
                transition: transform 0.2s ease, stroke 0.2s ease;
                stroke-width: 3;
                width: 28px;
                height: 28px;
                stroke: @(esteHomepage ? "white" : "var(--albastru-site)");
            }

            .burger-button:hover svg,
            .cart-button:hover svg {
                transform: scale(1.15);
                stroke: var(--albastru-site) !important;
            }

        .logo-link {
            text-decoration: none;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 4px;
            padding-bottom: 6px;
        }

            .logo-link img {
                height: 70px;
                max-height: 100%;
                transition: transform 0.25s ease, filter 0.25s ease;
            }

            .logo-link:hover img {
                transform: scale(1.05);
                filter: brightness(1.1) drop-shadow(0 0 4px var(--albastru-site));
            }

        header nav a {
            padding: 4px 6px;
            transition: color 0.2s ease;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 0.8rem;
            text-decoration: none;
            white-space: nowrap;
        }

            header nav a:hover {
                color: var(--albastru-site);
            }

        .sidebar {
            position: fixed;
            top: 0;
            height: 100vh;
            width: 280px;
            background: white;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            z-index: 9999;
            overflow-y: auto;
            transform: translateX(-100%);
            opacity: 0;
            pointer-events: none;
            transition: transform 0.3s ease, opacity 0.3s ease;
        }

            .sidebar.right-sidebar {
                right: 0;
                left: auto;
                transform: translateX(100%);
            }

            .sidebar.active {
                transform: translateX(0);
                opacity: 1;
                pointer-events: auto;
            }

        .overlay-sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.4);
            backdrop-filter: blur(2px);
            z-index: 9998;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

            .overlay-sidebar.active {
                opacity: 1;
                pointer-events: auto;
            }

        .btn-close-sidebar {
            position: absolute;
            top: 10px;
            right: 15px;
            font-size: 1.5rem;
            background: none;
            border: none;
            cursor: pointer;
        }

        main.container.pt-3 {
            padding-top: 0px !important;
        }

        main.container.py-4 {
            padding-top: 96px !important;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.07);
            }

            100% {
                transform: scale(1);
            }
        }

        /* ✅ Responsive DOAR pentru telefon */
        @@media (max-width: 768px) {
            .hero-header {
                height: 48px !important;
                min-height: 48px !important;
                background: transparent;
                padding: 0 !important;
            }

            .header-mobile-wrapper {
                width: 100%;
                flex-wrap: nowrap;
                min-width: 0;
                padding: 0 20px 0 6px; /* Spațiu mai mare la dreapta: 14px în loc de 6px */
                position: relative;
                /* overflow: visible; */
            }

            .header-section-stanga,
            .header-section-dreapta {
                min-width: 0;
                flex: 0 1 auto;
                gap: 0px !important;
            }

            .header-section-centru {
                position: absolute;
                left: 0;
                right: 0;
                margin: 0 auto;
                display: flex;
                align-items: center;
                justify-content: center;
                pointer-events: none;
                z-index: 2;
                height: 48px;
                width: 100%;
                /* ca să fie peste restul și logo-ul nu taie din stânga/dreapta */
                top: 0;
            }

                .header-section-centru .logo-link {
                    pointer-events: auto; /* Doar logo e clickabil */
                    display: flex;
                    align-items: center;
                }

            .logo-link img {
                height: 34px !important;
                max-width: 55px;
                margin: 0 auto;
            }

            .burger-button,
            .cart-button {
                width: 34px !important;
                height: 34px !important;
                min-width: 26px !important;
                min-height: 26px !important;
                padding: 0 !important;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .burger-button svg,
                .cart-button svg {
                    width: 24px !important;
                    height: 24px !important;
                    display: block;
                }

            .header-section-stanga {
                margin-right: 12px; /* Împinge spre logo */
            }

            .header-section-dreapta {
                margin-left: 28px; /* Împinge spre logo */
                /* overflow: visible !important; strica multe */
            }

                .header-section-stanga nav a,
                .header-section-dreapta nav a {
                    font-size: 0.58rem !important;
                    padding: 0 2px !important;
                    white-space: nowrap;
                    font-weight: 600;
                    max-width: 70px;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    letter-spacing: 0;
                    line-height: 1.15;
                }
        }






    </style>

</head>
<body>

    <header class="hero-header px-2 px-sm-3 @(esteHomepage ? "" : "bg-white border-bottom shadow-sm")">
        <div class="header-mobile-wrapper w-100 d-flex align-items-center justify-content-between flex-nowrap">

            <!-- ✅ Zona Stânga: burger + CĂRBUNI + APRINZĂTOR -->
            <div class="header-section-stanga d-flex align-items-center gap-1 flex-nowrap">
                <button class="burger-button" onclick="deschideMeniu()">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                         stroke="@culoareIconite" stroke-width="3"
                         stroke-linecap="round" stroke-linejoin="round">
                        <line x1="3" y1="6" x2="21" y2="6" />
                        <line x1="3" y1="12" x2="21" y2="12" />
                        <line x1="3" y1="18" x2="21" y2="18" />
                    </svg>
                </button>

                <nav class="d-flex gap-1 align-items-center text-uppercase fw-bold flex-nowrap">
                    <a href="/Website/Produse#carbuni" class="text-decoration-none">CĂRBUNI</a>
                    <a href="/Website/Produse#aprinzator" class="text-decoration-none">APRINZĂTOR</a>
                </nav>
            </div>

            <!-- ✅ Zona Centru: logo -->
            <div class="header-section-centru d-flex justify-content-center">
                <a class="logo-link mx-2" asp-controller="Website" asp-action="Index">
                    <img src="~/images/logo-apacks.png" alt="Cărbuni Apacks Logo" />
                </a>
            </div>

            <!-- ✅ Zona Dreapta: USTENSILE + LEMNE/LÂNĂ + cart -->
            <div class="header-section-dreapta d-flex align-items-center gap-1 flex-nowrap">
                <nav class="d-flex gap-1 align-items-center text-uppercase fw-bold flex-nowrap">
                    <a href="/Website/Produse#ustensile" class="text-decoration-none">USTENSILE</a>
                    <a href="/Website/Produse#kit" class="text-decoration-none">LEMNE/LÂNĂ</a>
                </nav>

                <a href="javascript:void(0)" class="cart-button" onclick="deschideCos()">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                         stroke="@culoareIconite" stroke-width="3"
                         stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="9" cy="21" r="1" />
                        <circle cx="20" cy="21" r="1" />
                        <path d="M1 1h4l2.5 13a2 2 0 0 0 2 1.6h11a2 2 0 0 0 2-1.6L23 6H6" />
                    </svg>
                </a>
            </div>

        </div>
    </header>



    @* @{
        var culoareIconite = esteHomepage ? "white" : "#1f3b71";
    } *@



    <div id="meniuLateral" class="sidebar left-sidebar">
        <button onclick="inchideMeniu()" class="btn-close-sidebar">✕</button>
        <ul class="list-unstyled p-4">
            <li><a href="/">Acasă</a></li>
            <li><a href="/Website/Produse">Produse</a></li>
            <li><a href="/Website/CumAlegiCarbunii">Cum alegi cărbunii</a></li>
            <li><a href="/Website/DespreNoi">Despre noi</a></li>
            <li><a href="/Website/Contact">Contact</a></li>
        </ul>
    </div>

    <div id="cosLateral" class="sidebar right-sidebar">
        <button onclick="inchideCos()" class="btn-close-sidebar">✕</button>
        <div class="p-4">
            <h5>Coșul tău</h5>
            <p>(coșul este momentan gol)</p>
        </div>
    </div>

    <div id="overlaySidebar" class="overlay-sidebar" onclick="inchideMeniu(); inchideCos();"></div>

    <main class="@(esteHomepage ? "" : "container pt-3")">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <script>
        function deschideMeniu() {
            document.getElementById("meniuLateral").classList.add("active");
            document.getElementById("overlaySidebar").classList.add("active");
        }

        function inchideMeniu() {
            document.getElementById("meniuLateral").classList.remove("active");
            document.getElementById("overlaySidebar").classList.remove("active");
        }

        function deschideCos() {
            document.getElementById("cosLateral").classList.add("active");
            document.getElementById("overlaySidebar").classList.add("active");
        }

        function inchideCos() {
            document.getElementById("cosLateral").classList.remove("active");
            document.getElementById("overlaySidebar").classList.remove("active");
        }
    </script>
</body>
</html>
