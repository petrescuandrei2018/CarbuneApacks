@{
    ViewData["Title"] = "Contact Apacks | Trimite un mesaj rapid";
    ViewData["Canonical"] = "https://carbune.ro/contact";
    Layout = "_Layout";
}

@section MetaTags {
    <meta name="description" content="Contactează echipa Apacks pentru detalii despre cărbuni, comenzi sau colaborări. Răspundem rapid pe WhatsApp, Facebook, TikTok sau email.">
    <meta property="og:title" content="Contact Apacks | Trimite un mesaj rapid" />
    <meta property="og:description" content="Ai întrebări despre produsele Apacks sau despre livrare? Trimite un mesaj direct echipei noastre." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://carbune.ro/contact" />
    <meta property="og:image" content="https://carbune.ro/images/carbuni-preview.jpg" />
}

<section class="container py-4 px-3" style="max-width: 700px; margin: auto;">
    <h1 class="h4 fw-bold mb-4 text-center text-uppercase">Contact Apacks</h1>

    <p class="text-center mb-4">Ai întrebări despre produsele noastre sau vrei să plasezi o comandă? Completează formularul de mai jos și îți răspundem rapid!</p>

    <form method="post" action="/Website/TrimiteContact" class="row g-3" id="formular-comanda">
        <div class="col-12">
            <label for="nume" class="form-label">Nume</label>
            <input type="text" class="form-control" id="nume" name="nume" required />
        </div>

        <div class="col-12">
            <label for="email" class="form-label">Adresă de email</label>
            <input type="email" class="form-control" id="email" name="email" required />
        </div>

        <div class="col-12">
            <label for="mesaj" class="form-label">Mesaj</label>
            <textarea class="form-control" id="mesaj" name="mesaj" rows="5" required></textarea>
        </div>

        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary btn-lg w-100">Trimite mesajul</button>
        </div>
    </form>

    
</section>
