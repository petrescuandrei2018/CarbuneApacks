    ViewData["Title"] = "Despre Cărbuni Apacks | Brand românesc cărbuni naturali";
    ViewData["Canonical"] = "https://carbune.ro/despre-noi";
    Layout = "_Layout";
}

@section MetaTags {
    <meta name="description" content="Află cine suntem: Apacks – furnizor românesc de cărbuni naturali pentru grătar. Calitate, livrare rapidă și mii de clienți mulțumiți.">
    <link rel="canonical" href="https://carbune.ro/despre-noi" />
    <meta property="og:title" content="Despre Cărbuni Apacks | Brand românesc cărbuni naturali" />
    <meta property="og:description" content="Află cine suntem: Apacks – furnizor românesc de cărbuni naturali pentru grătar." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://carbune.ro/despre-noi" />
