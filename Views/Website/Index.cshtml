    }

    .hero-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        z-index: 0;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 2;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.32);
        color: white;
        text-align: center;
        padding: 2rem;
        pointer-events: none;
    }

        .hero-overlay * {
            pointer-events: auto;
        }

        .hero-overlay h1 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1rem;
        }

        .hero-overlay p {
            font-size: 1.2rem;
            max-width: 600px;
        }

    .btn-primary {
        background-color: #0069d9;
        border-color: #0062cc;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .play-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
        display: none;
        pointer-events: none;
        opacity: 0.8;
    }

        .play-overlay svg {
            width: 68px;
            height: 68px;
            filter: drop-shadow(0 2px 10px #0007);
        }

    .sound-toggle {
        position: absolute;
        bottom: 28px;
        right: 28px;
        z-index: 10;
        background: rgba(0, 0, 0, 0.6);
        border-radius: 50%;
        padding: 10px;
        cursor: pointer;
        transition: background 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 56px;
        height: 56px;
    }

        .sound-toggle:hover {
            background: rgba(0, 0, 0, 0.85);
        }

        .sound-toggle img {
            object-fit: contain;
            transition: all 0.2s ease-in-out;
        }

    #muteIcon {
        width: 36px;
        height: 36px;
    }

    #unmuteIcon {
        width: 48px;
        height: 48px;
    }

    @@media (max-width: 600px) {
        .hero-overlay h1

    {
        font-size: 1.25rem;
    }

    .hero-overlay p {
        font-size: 0.95rem;
    }

    .hero-overlay {
        padding: 1rem;
    }

    }
</style>

