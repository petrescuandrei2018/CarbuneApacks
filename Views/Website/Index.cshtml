</script>
<script>
        function resizeHeroTitle() {
        const title = document.querySelector('.hero-title-nowrap');
        if (!title) return;
        // Resetăm la valoarea de bază (cea mai mare)
        title.style.fontSize = '';
        // Luăm font-size-ul calculat
        let base = window.getComputedStyle(title).fontSize;
        let size = parseFloat(base);
        const unit = base.replace(/[0-9.]/g, '') || 'px';
        // Limite ca să nu scadă infinit
        const minSize = 0.72 * size;

        // Verifică dacă încape pe o linie
        while (
            (title.scrollWidth > title.clientWidth + 1) && // plus 1 ca să nu taie la fix
            size > minSize
        ) {
            size -= 1; // scade cu 1px la fiecare pas (poți ajusta cu 0.5 pentru fine tuning)
            title.style.fontSize = size + unit;
        }
    }

    // Rulează la încărcare și la resize (și la orice schimbare de titlu, dacă vrei)
    window.addEventListener('resize', resizeHeroTitle);
    document.addEventListener('DOMContentLoaded', resizeHeroTitle);
    // Dacă schimbi titlul dinamic, poți apela resizeHeroTitle() din JS.
</script>





