<script>
function resizeReviewRow() {
    const row = document.getElementById('reviewRowFlex');
    if (!row) return;
    let size = 1.07; // valoarea implicită (în rem)

    // Reset la valoarea implicită (ca să nu scadă mereu de la un font deja redus)
    row.style.fontSize = size + 'rem';

    // Scade font-size progresiv până încape pe o linie, dar nu mai mic de 0.74rem
    let attempts = 0;
    while (row.scrollWidth > row.clientWidth && size > 0.74 && attempts < 12) {
        size -= 0.04;
        row.style.fontSize = size + 'rem';
        attempts++;
    }
}

// Se redimensionează la resize, la încărcare și la orice schimbare de conținut
window.addEventListener('resize', () => requestAnimationFrame(resizeReviewRow));
document.addEventListener('DOMContentLoaded', resizeReviewRow);

