<style>
    :root {
        --albastru-site: #1f3b71;
        --carousel-width: 480px;
        --carousel-arrow-offset: 74px;
        --carousel-arrow-size: 58px;
    }

    html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
        background: #fff;
        min-height: 100vh;
        height: auto;
    }

    .pause-overlay {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
        z-index: 10000;
        align-items: center;
        justify-content: center;
        pointer-events: auto;
        background: none;
        opacity: 1;
    }

    .pause-overlay[style*="display: none"] {
        pointer-events: none !important;
    }

        .pause-overlay svg{
            width: 70px !important;
            height: 70px !important;
            pointer-events: none;
            filter: drop-shadow(0 2px 8px #111b);
            opacity: 0.97;
        }

        .pause-overlay .pause-icon {
            width: 54px !important;
            height: 54px !important;
            color: #fff;
            opacity: 0.93;
            filter: drop-shadow(0 2px 6px #2227);
            pointer-events: none;
        }


    .full-width-hero {
        position: relative;
        width: 100vw;
        height: 100vh;
        min-height: 340px;
        overflow: hidden;
        background: #000;
        margin-bottom: 1rem; /* sau chiar 4rem dacă vrei și mai mult spațiu */
    }

    .hero-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        z-index: 0;
    }

    .hero-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
        text-shadow: 2px 2px 5px black;
        padding: 0 0vw; /* sau chiar 0! */
        z-index: 10;
        opacity: 0;
        animation: fadeSlideUp 1.2s ease-out forwards;
    }

        .hero-overlay h1 {
            width: 100vw;
            max-width: 100vw;
            box-sizing: border-box;
            white-space: nowrap;
            font-size: clamp(1rem, 4.7vw, 1.7rem); 
            font-weight: 900;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
            line-height: 1.09;
            letter-spacing: -0.5px;
            color: #fff;
            text-shadow: 2px 2px 6px #111b;
            text-align: center;
            padding: 0 2vw;
            overflow: visible;
            text-overflow: unset;
        }

        .hero-overlay p {
            font-size: clamp(0.95rem, 2.7vw, 1.25rem);
            font-weight: 600;
            text-transform: uppercase;
            margin-bottom: 1.5rem;
            transition: transform 0.3s ease, color 0.3s ease;
            white-space: normal !important;
            text-align: center !important;
            display: block !important;
            max-width: 100% !important;
            line-height: 1.17;
        }

            .hero-overlay h1:hover, .hero-overlay p:hover {
                transform: scale(1.05);
                color: var(--albastru-site);
            }

        .hero-overlay .btn {
            font-size: 1rem;
            font-weight: 700;
            padding: 0.75rem 2rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 0 0 rgba(0, 0, 0, 0);
        }

            .hero-overlay .btn:hover {
                transform: scale(1.05);
                box-shadow: 0 0 10px rgba(255, 255, 255, 0.6);
            }

    .btn-primary {
        background-color: #0069d9;
        border-color: #0062cc;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .play-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 10;
        display: none;
        pointer-events: none;
        opacity: 0.8;
    }

        .play-overlay svg {
            width: 68px;
            height: 68px;
            filter: drop-shadow(0 2px 10px #0007);
        }

    .sound-toggle {
        position: absolute;
        bottom: 28px;
        right: 28px;
        z-index: 10;
        background: rgba(0, 0, 0, 0.6);
        border-radius: 50%;
        padding: 10px;
        cursor: pointer;
        transition: background 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 56px;
        height: 56px;
    }

        .sound-toggle:hover {
            background: rgba(0, 0, 0, 0.85);
        }

        .sound-toggle img {
            object-fit: contain;
            transition: all 0.2s ease-in-out;
        }

    #muteIcon {
        width: 36px;
        height: 36px;
    }

    #unmuteIcon {
        width: 48px;
        height: 48px;
    }

    @@keyframes fadeSlideUp {
        0% {
            opacity: 0;
            transform: translate(-50%, -40%);
        }

        100% {
            opacity: 1;
            transform: translate(-50%, -50%);
