@{
    ViewData["Title"] = "Cărbuni din cocos pentru grătar | Ardere curată și intensă";
    ViewData["Canonical"] = "https://carbune.ro/produse/carbuni-cocos";
    Layout = "_Layout";
}

@section MetaTags {
    <meta name="description" content="Cărbuni hexagonali din coajă de nucă de cocos – ardere puternică, fără fum, ideali pentru grătare și HoReCa. Disponibili la 3kg și 10kg.">
    <meta name="robots" content="index, follow">

    <meta property="og:title" content="Cărbuni din cocos pentru grătar | Ardere curată și intensă" />
    <meta property="og:description" content="Cărbuni premium din coajă de cocos – ardere lungă și uniformă, fără fum sau scântei. Ideali pentru grătar." />
    <meta property="og:type" content="product" />
    <meta property="og:url" content="https://carbune.ro/produse/carbuni-cocos" />
    <meta property="og:image" content="https://carbune.ro/images/carbuni-cocos.jpg" />
    <meta property="og:image:alt" content="Cărbuni din cocos pentru grătar" />
}

<section class="container py-4 px-3" style="max-width: 700px; margin: auto;">
    <h1 class="h4 fw-bold mb-4 text-uppercase text-center">Cărbuni din coajă de nucă de cocos</h1>

    <img src="/images/carbuni-cocos.jpg" alt="Cărbuni hexagonali din cocos" class="img-fluid rounded mb-4" loading="lazy" style="max-height: 300px; width: 100%; object-fit: cover;">

    <p>Cărbunii din cocos sunt obținuți din coajă de nucă de cocos presată, fără chimicale sau aditivi. Ard constant și curat, fără miros, fiind perfecți pentru grătare sau utilizare profesională în HoReCa.</p>

    <ul class="list-unstyled">
        <li>🔥 Ardere intensă și constantă</li>
        <li>💨 Fără fum, fără miros</li>
        <li>🧽 Nu murdăresc grătarul, nu scot scântei</li>
        <li>📦 Disponibili în variante de 3kg și 10kg</li>
    </ul>

    <div class="mt-4 text-center">
        <button class="btn btn-danger btn-lg w-100 btn-adauga-cos">Adaugă în coș</button>
        <a href="/Website/Contact" class="btn btn-outline-secondary mt-2 w-100">Cere detalii</a>
    </div>

    <p class="mt-4 text-center">
        <a href="/Website/Produse" class="text-decoration-none">← Înapoi la lista de produse</a>
    </p>
</section>
