@{
    ViewData["Title"] = "Reviewuri Cărbune Cocos | CĂRBUNI APACKS";
    ViewData["Canonical"] = "https://carbune.ro/reviewuri/carbuni-cocos";
    Layout = "_Layout";
}

@section MetaTags {
    <meta name="description" content="Recenzii reale pentru cărbunii brichetați din nucă de cocos. Află părerile clienților despre ardere, durată și eficiență.">
    <meta property="og:title" content="Reviewuri Cărbune Cocos | CĂRBUNI APACKS" />
    <meta property="og:description" content="Păreri verificate despre cărbunii premium din coajă de cocos. Ardere curată, ideală pentru grătar." />
    <meta property="og:type" content="product.group" />
    <meta property="og:url" content="https://carbune.ro/reviewuri/carbuni-cocos" />
    <meta property="og:image" content="https://carbune.ro/images/carbuni-cocos.jpg" />
    <meta property="og:image:alt" content="Reviewuri cărbune cocos" />
}

<section class="container py-5">
    <h1 class="h4 fw-bold mb-4 text-center text-uppercase">Recenzii Cărbune Cocos</h1>

    <article class="mb-4">
        <p class="review-text">„Ard super eficient! Fără fum, fără scântei – am gătit 3 ore fără probleme.”</p>
        <p class="review-author">– Vlad T., Cluj-Napoca</p>
    </article>

    <article class="mb-4">
        <p class="review-text">„Foarte mulțumit. În sfârșit cărbuni care nu mă lasă cu carnea crudă.”</p>
        <p class="review-author">– Diana M., București</p>
    </article>

    <article class="mb-4">
        <p class="review-text">„Recomand. Miros neutru, jar constant. Ambalajul e rezistent.”</p>
        <p class="review-author">– Ionuț R., Timișoara</p>
    </article>
</section>
