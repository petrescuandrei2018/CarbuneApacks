@{
    ViewData["Title"] = "Recenzii cărbuni din lemn | CĂRBUNI APACKS";
    ViewData["Canonical"] = "https://carbune.ro/reviewuri/carbuni-lemn";
    Layout = "_Layout";
}

@section MetaTags {
    <meta name="description" content="Toate recenziile despre cărbunii brichetați din lemn (3kg și 10kg) – opinii reale ale clienților din România.">
    <meta property="og:title" content="Recenzii cărbuni din lemn | CĂRBUNI APACKS" />
    <meta property="og:description" content="Ce spun clienții despre cărbunii din lemn pentru grătar – recenzii verificate, evaluări și experiențe." />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="https://carbune.ro/reviewuri/carbuni-lemn" />
}

<h1 class="titlu-reviewuri">Toate recenziile pentru Cărbunii Hexagonali Brichetați din Lemn</h1>

<div class="lista-reviewuri">
    <!-- Exemplu review -->
    <div class="card-review">
        <div class="stars">★★★★★</div>
        <div class="rating-line">
            <span class="review-rating">4.9</span>
            <span class="carousel-review-count">(112)</span>
        </div>
        <p class="review-text">Am folosit atât varianta de 3kg cât și cea de 10kg. Ard fără fum, perfect pentru grătar!</p>
        <div class="review-row-flex">
            <span class="review-author">GEORGE</span>
            <span class="verified-badge">Verificat</span>
        </div>
    </div>
</div>
